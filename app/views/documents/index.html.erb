
<div class="container cntr">
  <p id="notice"><%= notice %></p>

  <h1>Listing Documents</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Filename</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @documents.each do |document| %>
        <tr>
          <td><%= document.filename %></td>
          <td><%= document.description %></td>
          <td><%= document.latitude %></td>
          <td><%= document.longitude %></td>
          <td><%= document.user.username %></td>
          <td><%= link_to 'Download Document', document.attachment_url %></td>
          <td><%= link_to 'Show', document, class: 'btn btn-primary' %></td>
<!--
          <td><%= link_to 'Edit', edit_document_path(document), class: 'btn btn-warning' %></td>
-->
          <td><%= link_to 'Destroy', document, method: :delete, class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Document', new_document_path %>
</div>

