<div class="container">
  <div class="row justify-content-center">
    <div class="container-color col-11">
      <p id="notice"><%= notice %></p>
      <h1>Listing Documents</h1>
      <table class="table table-responsive table-hover" style="background-color: #ffffff">
        <thead>
        <tr>
          <th>Filename</th>
          <th>Description</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @documents.each do |document| %>
            <tr>
              <td><%= document.filename %></td>
              <td><%= document.description %></td>
              <td><%= document.latitude %></td>
              <td><%= document.longitude %></td>
              <td><%= document.user.username %></td>
              <td><%= link_to 'Download Document', document.attachment_url, class: 'btn btn-primary' %></td>
              <td><%= link_to 'Destroy', document, method: :delete, class: 'btn btn-danger' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Document', new_document_path %>
      <br>
      <%= link_to 'Back', admin_root_path %>
    </div>
  </div>
</div>

