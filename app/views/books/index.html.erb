<div class="container">
  <div class="row justify-content-center">
    <div class="container-color col-11">
      <p id="notice"><%= notice %></p>
      <h1>Listing Books</h1>
      <table class="table table-responsive table-hover" style="background-color: #ffffff">
        <thead>
        <tr>
          <th>Bookname</th>
          <th>Description</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
            <tr>
              <td><%= book.name %></td>
              <td><%= book.description %></td>
              <td><%= book.latitude %></td>
              <td><%= book.longitude %></td>
              <td><%= book.user.username %></td>
              <td><%= link_to 'Destroy', book, method: :delete, class: 'btn btn-danger' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Book', new_book_path %>
      <br>
      <%= link_to 'Back', admin_root_path %>
    </div>
  </div>
</div>
